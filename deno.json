{
  "lint": {
    "include": ["supabase/", "test/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "importMap": "./import_map.json",
  "tasks": {
    "deploy": "supabase functions deploy --import-map ./import_map.json && supabase secrets set --env-file ./supabase/.env.local",
    "local": "supabase start && supabase functions serve --env-file ./supabase/.env.local --import-map ./import_map.json"
  }
}
